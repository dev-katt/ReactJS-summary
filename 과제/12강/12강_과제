import React, { useRef, useCallback, useState } from "react";
import produce from 'immer';

const App = () => {
  const nextId = useRef(1);
  const [form, setForm] = useState({ name: "", username: "" });
  const [data, setData] = useState({
    array: [],
    uselessValue: null,
  });

  // input ÏàòÏ†ïÏùÑ ÏúÑÌïú Ìï®Ïàò
  const onChange = useCallback(
    (e) => {
      const { name, value } = e.target;
      setForm({
 üòÉ       produce(form, (draft) => {
          draft[name] = value;
        })
      );
    },
    [form]
  );

  // form Îì±Î°ùÏùÑ ÏúÑÌïú Ìï®Ïàò
  const onSubmit = useCallback(
    (e) => {
      e.preventDefault();
      const info = {
        id: nextId.current,
        name: form.name,
        username: form.username,
      };

      // arrayÏóê ÏÉà Ìï≠Î™© Îì±Î°ù
      setData(
üòÄ        produce(data, draft => {
          draft.array.push(info);
        })
      );

      // form Ï¥àÍ∏∞Ìôî
      setForm({
        name: "",
        username: "",
      });
      nextId.current += 1;
    },
    [data, form.name, form.username]
  );

  // Ìï≠Î™©ÏùÑ ÏÇ≠Ï†úÌïòÎäî Ìï®Ïàò
  const onRemove = useCallback(
    (id) => {
      setData({
üòÅ        produce(data, (draft) => {
          draft.array.splice(
            draft.array.findIndex((info) => info.id === id),1
          );
        })
      );
    },
    [data]
  );

  return (
    <div>
      <form onSubmit={onSubmit}>
        <input
          name="username"
          placeholder="ÏïÑÏù¥Îîî"
          value={form.username}
          onChange={onChange}
        />
        <input
          name="name"
          placeholder="Ïù¥Î¶Ñ"
          value={form.name}
          onChange={onChange}
        />
        <button type="submit">Îì±Î°ù</button>
      </form>
      <div>
        <ul>
          {data.array.map((info) => (
            <li key={info.id} onClick={() => onRemove(info.id)}>
              {info.username} ({info.name})
            </li>
          ))}
        </ul>
      </div>
    </div>
  );
};

export default App;
